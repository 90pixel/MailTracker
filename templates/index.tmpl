<script type="text/javascript">
    let notifier = new AWN({
        position: 'bottom-right',
        labels: {
            success: 'Başarılı',
            alert: 'Uyarı',
            error: 'Hata',
            info: 'Bilgi',
            confirm: 'Onay',
            warning: 'Uyarı',
            confirmOk: "Tamam",
            confirmCancel: "İptal"
        },
        animations: {
            show: ['animated', 'fadeIn'],
            hide: ['animated', 'fadeOut']
        }
